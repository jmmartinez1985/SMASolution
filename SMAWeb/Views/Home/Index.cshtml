                   $ki("div.holder").jPages({
                       containerID: "anunciosAvailable",
                       //              previous: "←",
                       //              next: "→",
                       first: "first",
                       previous: "previous",
                       next: "next",
                       last: "last",
                       perPage: 7,
                       delay: 20
                   });
               },
