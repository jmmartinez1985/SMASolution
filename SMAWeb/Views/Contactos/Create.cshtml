@model SMAWeb.Models.CON_Contactenos

@{
    ViewBag.Title = "Create";
}

<div class="container">
    <div class="row-fluid">
        <div class="span3">
            <div class="headline">
                <h3>Anuncios Recientes</h3>
            </div>
            <div class="posts">
                <dl class="dl-horizontal">
                    <dt><a href="#">
                        <img src="~/Images/4.jpg" alt=""></a></dt>
                    <dd>
                        <p><a href="#">Anim moon officia Unify is an incredibly beautiful responsive Bootstrap Template</a></p>
                    </dd>
                </dl>
                <dl class="dl-horizontal">
                    <dt><a href="#">
                        <img src="~/Images/11.jpg" alt=""></a></dt>
                    <dd>
                        <p><a href="#">Anim moon officia Unify is an incredibly beautiful responsive Bootstrap Template</a></p>
                    </dd>
                </dl>

            </div>
        </div>


        <!--/span9-->
        <div class="span9">
            <div class="headline">
                <h3>Formulario de contacto</h3>
            </div>
            <div class="successmessage">
            </div>

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                @Html.AntiForgeryToken()
    
                
                
                <h4>Por favor complete la información requerida y déjenos su mensaje. Pronto le estaremos contactando.</h4>
                <br />


                
                <div class="editor-label">
                    @Html.LabelFor(model => model.CON_Nombre)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.CON_Nombre, new { @placeholder = "Nombre", @class = "input-xxlarge" }) <span class="color-red">*</span>
                    @Html.ValidationMessageFor(model => model.CON_Nombre)
                </div>
                
                
                <div class="editor-label">
                    @Html.LabelFor(model => model.CON_Email)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.CON_Email, new { @placeholder = "Correo Electrónico", @class = "input-xxlarge" }) <span class="color-red">*</span>
                    @Html.ValidationMessageFor(model => model.CON_Email)
                </div>
                
                <div class="editor-label">
                    @Html.LabelFor(model => model.CON_Telefono)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.CON_Telefono, new { @placeholder = "Teléfono", @class = "input-xlarge" }) <span class="color-red">*</span>
                    @Html.ValidationMessageFor(model => model.CON_Telefono)
                </div>
                
                <div class="editor-label">
                    @Html.LabelFor(model => model.CON_Celular)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.CON_Celular, new { @placeholder = "Celular", @class = "input-xlarge" }) <span class="color-red">*</span>
                    @Html.ValidationMessageFor(model => model.CON_Celular)
                </div>
                
                
                <div class="editor-label">
                    @Html.LabelFor(model => model.CON_Mensaje)
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.CON_Mensaje, new { @placeholder = "Mensaje", @class = "input-xxlarge" }) <span class="color-red">*</span>
                    @Html.ValidationMessageFor(model => model.CON_Mensaje)
                </div>
                

                <br />
                <input type="submit" value="Contactar" class="btn-u" id="submit-button" />
                <br />
                <p id="req-field-desc"><span class="color-red">*</span>Indica que es un campo mandatorio en el formulario</p>


             
          
            }

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
