@model SMAWeb.Models.BL_BlackList

@{
    ViewBag.Title = "Edit";
}

<br />
<div class="container">
    <div class="row-fluid margin-bottom-10">

        <div class="another-page">
            <div class="headline">
                <h3>Editar Categoría</h3>
            </div>


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

    
                @Html.HiddenFor(model => model.BL_Id)

                <div class="editor-label">
                    @Html.LabelFor(model => model.BL_Descripcion)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.BL_Descripcion)
                </div>

                <p>
                    <input type="submit" value="Guardar" class="btn-u btn-u-orange" />
                </p>
                <ul style="list-style: none;">
                    <li>@Html.ValidationMessageFor(model => model.BL_Descripcion)
                    </li>
                </ul>
            }

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
        </div>
    </div>
</div>
