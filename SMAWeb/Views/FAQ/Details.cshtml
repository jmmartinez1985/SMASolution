@model IEnumerable<SMAWeb.Models.FAQs>

@{
    ViewBag.Title = "Details";
}

<br />
<div class="container">
    <div class="row-fluid margin-bottom-10">

        <div class="another-page">
            <div class="headline">
                <h3>FAQs</h3>
                <h5>Preguntas y Respuestas Frecuentes de Service Market</h5>
            </div>


            <div class="accordion acc-home" id="accordion3">
                @{ int counter = 0; string cssClass = "in"; }
                @foreach (var item in Model)
                {
                    if (counter > 0)
                    {
                        cssClass = "";
                    }
                    <div class="accordion-group">
                        <div class="accordion-heading">
                            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion3" href="#collapse-@counter">@item.FAQ_Question
                            </a>
                        </div>
                        <div id="collapse-@counter" class="accordion-body collapse @cssClass">
                            <div class="accordion-inner">
                                <p>@item.FAQ_Answer</p>
                            </div>
                        </div>
                    </div>
                    <!--/accordion-group-->
                    counter++;
                }
            </div>

            @*<p>
    @Html.ActionLink("Edit", "Edit", new { /* id=Model.PrimaryKey */ }) |
    @Html.ActionLink("Back to List", "Index")
</p>*@
        </div>
    </div>
</div>
