@model IEnumerable<SMAWeb.Models.FAQs>

@{
    ViewBag.Title = "Index";
}

<br />
<div class="container">
    <div class="row-fluid margin-bottom-10">

        <div class="another-page">
            <div class="headline">
                <h3>Formulario de FAQs</h3>
            </div>


            <p>
                @Html.ActionLink("Nuevo", "Create")
            </p>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.FAQ_Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FAQ_Question)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FAQ_Answer)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ST_Estatus.ST_Descripcion)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody  id="divBody">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FAQ_Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FAQ_Question)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FAQ_Answer)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ST_Estatus.ST_Descripcion)
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Edit", new {  id=item.FAQ_Id   }) @*|
            @Html.ActionLink("Detalles", "Details", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Eliminar", "Delete", new { /* id=item.PrimaryKey */ })*@
                            </td>
                        </tr>
    
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="5">
                            <div class="holder" style="float: left">
                            </div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
<script>
    var $jpage = jQuery.noConflict();
    $jpage(function () {
        $jpage("div.holder").jPages({
            containerID: "divBody",
            //              previous: "?",
            //              next: "?",
            first: "Primera",
            previous: "Anterior",
            next: "Siguiente",
            last: "Última",
            perPage: 15,
            delay: 20
        });
    });
</script>