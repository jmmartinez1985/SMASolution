@model SMAWeb.Models.RW_Reviews

@{
    ViewBag.Title = "Create";
}

<script src="~/Scripts/raty-2.5.2/lib/jquery.raty.min.js"></script>
<link href="~/Content/Rating.css" rel="stylesheet" />

<br />
<div class="container">
    <div class="row-fluid margin-bottom-10">

        <div class="another-page">
            <div class="headline">
                <h3>Publicar Comentario del Servicio</h3>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

   

                @Html.HiddenFor(model => model.RW_Id)
                @Html.HiddenFor(model => model.SS_Id)
                @Html.HiddenFor(model => model.RW_Fecha)
                
                
                <div class="editor-label">
                    @Html.LabelFor(model => model.RW_Rate)
                </div>
                <div class="editor-field">
                    <div class="demo">
                        <div id="targetKeep-demo" class="target-demo" style="cursor: pointer; width: 190px;">

                            <input type="hidden" name="score">
                        </div>
                        <div id="targetKeep-hint" class="hint">
                        </div>
                    </div>
                    @Html.HiddenFor(model => model.RW_Rate)
                    @Html.ValidationMessageFor(model => model.RW_Rate)
                </div>

                
                <div class="editor-label">
                    @Html.LabelFor(model => model.RW_Comentario)
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.RW_Comentario, new { @placeholder = "Comentario", @class = "input-xxlarge", @rows = "8" })
                    @Html.ValidationMessageFor(model => model.RW_Comentario)
                </div>

                <p>
                    <input type="submit" value="Publicar" class="btn btn-u" />
                </p>
   
            }
        </div>
    </div>
</div>


@*<div>
    @Html.ActionLink("Regresar", "Index")
</div>*@

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>

    var $rate = jQuery.noConflict();
    $rate(function () {
        $rate.fn.raty.defaults.path = '@Url.Content("~/Scripts/raty-2.5.2/lib/img")';
        $rate('#targetKeep-demo').raty({
            cancel: true,
            target: '#targetKeep-hint',
            targetKeep: true,


            cancelOff: 'cancel-off-big.png',
            cancelOn: 'cancel-on-big.png',
            size: 24,
            starHalf: 'star-half-big.png',
            starOff: 'star-off-big.png',
            starOn: 'star-on-big.png',
            click: function (score, evt) {
                $rate("#RW_Rate").attr("value", score);
            }
        });

    });


</script>
