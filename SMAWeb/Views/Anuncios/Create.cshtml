@model SMAWeb.Models.AN_Anuncios

@{
    ViewBag.Title = "Create";
}

<br />
<div class="container">
    <div class="row-fluid margin-bottom-10">

        <div class="another-page">
            <div class="headline">
                <h3>Crear Anuncio</h3>
            </div>

            @using (Ajax.BeginForm("Create", "Anuncios", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "content", OnSuccess = "Success"  }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                @Html.HiddenFor(model => model.AN_Id)
                @Html.HiddenFor(model => model.UserId, "UserProfile")
                @Html.HiddenFor(model => model.AN_Fecha) 
                @Html.HiddenFor(model => model.AN_FechaExpiracion)
                @Html.HiddenFor(model => model.ST_Id)
               
                <div class="row-fluid">
                    <div class="span12">
                        <div class="controls form-inline">
                            @Html.LabelFor(model => model.AN_Titulo)<span class="color-red"> *</span>
                        </div>
                        <div class="editor-field">
                            @Html.TextBoxFor(model => model.AN_Titulo, new { @placeholder = "Título del Anuncio", @class = "input-block-level" })
                            @Html.ValidationMessageFor(model => model.AN_Titulo)
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">

                        <div class="span4">
                            <div class="controls form-inline">
                                @Html.LabelFor(model => model.PA_Id)<span class="color-red"> *</span>
                            </div>
                            <div class="editor-field">
                                @Html.DropDownList("PA_Id", (IEnumerable<SelectListItem>)ViewBag.PA_Id, "Selecione el país", new { @class = "input-block-level" })
                                @Html.ValidationMessageFor(model => model.PA_Id)
                            </div>
                            <div class="controls form-inline">
                                @Html.LabelFor(model => model.CD_Id)<span class="color-red"> *</span>
                            </div>
                            <div class="editor-field">
                                @Html.DropDownList("CD_Id", (IEnumerable<SelectListItem>)ViewBag.CD_Id, "Selecione la categoría", new { @class = "input-block-level" })
                                @Html.ValidationMessageFor(model => model.CD_Id)
                            </div>
                            <div class="controls form-inline">
                                @Html.LabelFor(model => model.SBS_Id)
                            </div>
                            <div class="editor-field">
                                @Html.DropDownList("SBS_Id", (IEnumerable<SelectListItem>)ViewBag.SBS_Id, "Selecione la subcategoría", new { @class = "input-block-level" })
                                @Html.ValidationMessageFor(model => model.SBS_Id)
                            </div>
                            <div class="controls form-inline">
                                @Html.LabelFor(model => model.AN_Telefono)<span class="color-red"> *</span>
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.AN_Telefono, new { @placeholder = "Teléfono", @class = "input-block-level" })
                                @Html.ValidationMessageFor(model => model.AN_Telefono)
                            </div>

                            <div class="editor-label">
                                @Html.LabelFor(model => model.AN_Celular)
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.AN_Celular, new { @placeholder = "Teléfono 2", @class = "input-block-level" })
                                @Html.ValidationMessageFor(model => model.AN_Celular)
                            </div>
                            <div class="controls form-inline">
                                @Html.LabelFor(model => model.AN_Area)<span class="color-red"> *</span>
                            </div>
                            <div class="editor-field">
                                @Html.TextAreaFor(model => model.AN_Area, new { @placeholder = "Lugar del Anuncio", @class = "input-block-level", @rows = "3" })
                                @Html.ValidationMessageFor(model => model.AN_Descripcion)
                            </div>

                        </div>
                        <div class="span5">
                            <div class="controls form-inline">
                                @Html.LabelFor(model => model.AN_Descripcion)<span class="color-red"> *</span>
                            </div>
                            <div class="editor-field">
                                @Html.TextAreaFor(model => model.AN_Descripcion, new { @placeholder = "Descripción del Anuncio", @class = "input-block-level", @rows = "14" })
                                @Html.ValidationMessageFor(model => model.AN_Descripcion)
                            </div>

                            <p>
                                <input type="submit" value="Crear Anuncio" class="btn-u pull-right submitbtn" />

                            </p>

                        </div>
                        <div class="span3">

                            <div class="headline">
                                <h3>Como publicar</h3>
                            </div>
                            <div class="info-blocks">
                                <i class="icon-bell icon-info-blocks"></i>
                                <div class="info-blocks-in">
                                    <h3>Paso # 1</h3>
                                    <p>Completa los datos de tu anuncio</p>
                                </div>
                            </div>

                            <div class="info-blocks">
                                <i class="icon-bell icon-info-blocks"></i>
                                <div class="info-blocks-in">
                                    <h3>Paso # 2</h3>
                                    <p>Carga los recursos que se utilizarán dentro de tu anuncio publicado.</p>
                                </div>


                            </div>
                        </div>

                    </div>

                </div> 
              
            }

            <p>
                @Html.ActionLink("Finalizar", "Index", "Home", null, new { @class = "btn-u pull-right submitback" })
            </p>

            <div id="content">
            </div>


            <div>
                @Html.ActionLink("Regresar", "Index", "Home", null, new { @class = "btn-u" })
            </div>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }

        </div>
    </div>
</div>


<script>
    jQuery(document).ready(function () {
        $('.submitback').hide();
    });
    jQuery(".start").click(function (e) {
        alert('Hi');
        debugger;
        jQuery.ajax({
            url: '@Url.Content("~/HttpHandler/UploadHandler.ashx")' + '?anuncio= ' + ' @ViewBag.AnuncioId',
            type: 'POST',
            dataType: "json",
            cache: false,
            success: function (data, textStatus, jqXHR) {
                alert('was success');


            },
            error: function (jqXHR, textStatus, errorThrown) {

            }
        });
    });

    function Success() {
        $("#content").prepend(' <br /> <br /><div class="alert alert-success fade in"><button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button><strong>Recursos! </strong> El anuncio esta habilitado para subir sus recursos.</div>');
        $('.alert').alert();
        $('.alert').fadeOut(10000)
        $('.submitbtn').hide();
        $('.submitback').show();
    }
</script>
