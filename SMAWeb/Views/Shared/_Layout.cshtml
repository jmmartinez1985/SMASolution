    <script type="text/javascript">
        var imageUp = '@Url.Content("~/images/up.png")';

        jQuery.ajax(
               {
                   type: 'post',
                   url: '@Url.Action("GetCompanyInfo", "Company")',
                   success: function (data) {


                       var company = JSON.parse(data);

                       var htmldata = '';

                       htmldata += '<address>';
                       htmldata += company.COM_Nombre;
                       htmldata += '<br>';
                       htmldata += company.COM_Direccion;
                       htmldata += '<br>';
                       htmldata += 'Teléfono: ' + company.COM_Telefono;
                       htmldata += '<br>';
                       htmldata += 'Correo: <a href="mailto:' + company.COM_Correo + '">' + company.COM_Correo + '</a>';
                       htmldata += '</address>';



                       jQuery('#divAddress').append(htmldata);

                   },
                   error: function (a, b, c) {

                   }
               });




    </script>


