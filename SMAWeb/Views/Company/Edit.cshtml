@model SMAWeb.Models.COM_Compañia

@{
    ViewBag.Title = "Edit";
}

<br />
<div class="container">
    <div class="row-fluid margin-bottom-10">

        <div class="another-page">
            <div class="headline">
                <h3>Editar Compañia</h3>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)


                   
                @Html.HiddenFor(model => model.COM_Id)
                   

                <div class="editor-label">
                    @Html.LabelFor(model => model.COM_Nombre)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.COM_Nombre, new { @placeholder = "Nombre", @class = "input-xxlarge" })
                    @Html.ValidationMessageFor(model => model.COM_Nombre)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.COM_Direccion)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.COM_Direccion, new { @placeholder = "Dirección", @class = "input-xxlarge" })
                    @Html.ValidationMessageFor(model => model.COM_Direccion)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.COM_Telefono)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.COM_Telefono, new { @placeholder = "Teléfono", @class = "input-large" })
                    @Html.ValidationMessageFor(model => model.COM_Telefono)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.COM_Correo)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.COM_Correo, new { @placeholder = "Correo Electrónico", @class = "input-xxlarge" })
                    @Html.ValidationMessageFor(model => model.COM_Correo)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.COM_Web)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.COM_Web, new { @placeholder = "Página Web", @class = "input-xxlarge" })
                    @Html.ValidationMessageFor(model => model.COM_Web)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.COM_ContactoNombre)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.COM_ContactoNombre, new { @placeholder = "Nombre de Contacto", @class = "input-xxlarge" })
                    @Html.ValidationMessageFor(model => model.COM_ContactoNombre)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.COM_ContactoCelular)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.COM_ContactoCelular, new { @placeholder = "Celular de Contacto", @class = "input-large" })
                    @Html.ValidationMessageFor(model => model.COM_ContactoCelular)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.COM_ContactoEmail)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.COM_ContactoEmail, new { @placeholder = "Correo de Contacto", @class = "input-xxlarge" })
                    @Html.ValidationMessageFor(model => model.COM_ContactoEmail)
                </div>

                <p>
                    <input type="submit" value="Guardar" class="btn-u" />
                </p>
                
            }

            <div>
                @Html.ActionLink("Regresar", "Index")
            </div>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
        </div>
    </div>
</div>
