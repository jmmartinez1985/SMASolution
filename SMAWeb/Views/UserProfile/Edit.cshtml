@model SMAWeb.Models.UserProfile

@{
    ViewBag.Title = "Edit";
}

<br />
<div class="container">
    <div class="row-fluid margin-bottom-10">

        <div class="another-page">
            <div class="headline">
                <h3>Editar Perfil</h3>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

   
                @Html.HiddenFor(model => model.UserId)

                <div class="editor-label">
                    @Html.LabelFor(model => model.UserName)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.UserName, new { @placeholder = "", @class = "input-xxlarge" })
                    @Html.ValidationMessageFor(model => model.UserName)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Name)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.Name, new { @placeholder = "", @class = "input-xxlarge" })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Details)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.Details, new { @placeholder = "", @class = "input-xxlarge" })
                    @Html.ValidationMessageFor(model => model.Details)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Address)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.Address, new { @placeholder = "", @class = "input-xxlarge" })
                    @Html.ValidationMessageFor(model => model.Address)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.City)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.City, new { @placeholder = "", @class = "input-xxlarge" })
                    @Html.ValidationMessageFor(model => model.City)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.PA_Id)
                </div>
                <div class="editor-field">
                    @Html.DropDownList("PA_Id", String.Empty)
                    @Html.ValidationMessageFor(model => model.PA_Id)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.MP_MemberShipId)
                </div>
                <div class="editor-field">
                    @Html.DropDownList("MP_MemberShipId", String.Empty)
                    @Html.ValidationMessageFor(model => model.MP_MemberShipId)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.ST_Id)
                </div>
                <div class="editor-field">
                    @Html.DropDownList("ST_Id", String.Empty)
                    @Html.ValidationMessageFor(model => model.ST_Id)
                </div>

                <p>
                    <input type="submit" value="Guardar" />
                </p>
            }

            <div>
                @Html.ActionLink("Regresar", "Index")
            </div>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
        </div>
    </div>
</div>
