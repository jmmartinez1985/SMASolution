@model SMAWeb.Models.UserProfile

@{
    ViewBag.Title = "Edit";
}

<br />
<div class="container">
    <div class="row-fluid margin-bottom-10">

        <div class="another-page">
            <div class="headline">
                <h3>Editar Perfil</h3>
            </div>

            <div class="span4">
                <div class="thumbnail-style">
                    <a class="fancybox-button zoomer" data-rel="fancybox-button" title="Project #1" href="assets/img/carousel/9.jpg"></a>
                    <div class="overlay-zoom">
                        <a class="fancybox-button zoomer" data-rel="fancybox-button" title="Project #1" href="assets/img/carousel/9.jpg">
                            <img src="assets/img/carousel/9.jpg" alt="">
                        </a>
                    </div>

                    <h3><a href="#">Our Work</a></h3>
                    <p>Donec id elit non mi porta gravida at eget metus. Fusce dapibus, justo sit amet risus etiam porta sem. <a class="read-more" href="#">Read more</a></p>

                </div>
            </div>
            <div class="span6">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.UserId)
                    <div class="row-fluid">
                        <div class="span3">@Html.LabelFor(model => model.UserName, new { @class = "control-label" })</div>
                        <div class="span3">@Html.TextBoxFor(model => model.UserName, new { @placeholder = "", @class = "input-xxlarge" })
                            @Html.ValidationMessageFor(model => model.UserName)
                        </div>
                    </div>
                    
                    <div class="row-fluid">
                        <div class="span3">@Html.LabelFor(model => model.Name)</div>
                        <div class="span3">
                            @Html.TextBoxFor(model => model.Name, new { @placeholder = "", @class = "input-xxlarge" })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>
                    

                   
                    <div class="row-fluid">
                        <div class="span3">@Html.LabelFor(model => model.Details)</div>
                        <div class="span3">
                            @Html.TextBoxFor(model => model.Details, new { @placeholder = "", @class = "input-xxlarge" })
                            @Html.ValidationMessageFor(model => model.Details)
                        </div>
                    </div>
                    
                    <div class="row-fluid">
                        <div class="span3">@Html.LabelFor(model => model.Address)</div>
                        <div class="span3">
                            @Html.TextBoxFor(model => model.Address, new { @placeholder = "", @class = "input-xxlarge" })
                            @Html.ValidationMessageFor(model => model.Address)
                        </div>
                    </div>
                    
                    <div class="row-fluid">
                        <div class="span3">@Html.LabelFor(model => model.City)</div>
                        <div class="span3">
                            @Html.TextBoxFor(model => model.City, new { @placeholder = "", @class = "input-xxlarge" })
                            @Html.ValidationMessageFor(model => model.City)
                        </div>
                    </div>
                    
                    <div class="row-fluid">
                        <div class="span3">@Html.LabelFor(model => model.PA_Id)</div>
                        <div class="span3">
                            @Html.DropDownList("PA_Id", String.Empty)
                            @Html.ValidationMessageFor(model => model.PA_Id)
                        </div>
                    </div>
                  
                    @Html.HiddenFor(model => model.MP_MemberShipId, "MB_Membresia")
                    @Html.HiddenFor(model => model.ST_Id, "ST_Estatus")

                    <p>
                        <input type="submit" value="Guardar" class="btn-u btn-large" />
                    </p>
                }
            </div>
            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
        </div>
    </div>
</div>
