@model SMAWeb.Models.CD_CategoriaServicio

@{
    ViewBag.Title = "Edit";
}

<br />
<div class="container">
    <div class="row-fluid margin-bottom-10">

        <div class="another-page">
            <div class="headline">
                <h3>Editar Categoría</h3>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

               
                 @Html.HiddenFor(model => model.CD_Id)

                    <div class="editor-label">
                        @Html.LabelFor(model => model.CD_Descripcion)
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.CD_Descripcion, new { @placeholder = "", @class = "input-xxlarge" })
                        @Html.ValidationMessageFor(model => model.CD_Descripcion)
                    </div>

                    <p>
                        <input type="submit" value="Guardar" class="btn-u" />
                    </p>
               
            }

            <div>
                @Html.ActionLink("Regresar", "Index")
            </div>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
        </div>
    </div>
</div>
