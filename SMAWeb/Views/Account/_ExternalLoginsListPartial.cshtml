@model ICollection<AuthenticationClientData>

@if (Model.Count == 0)
{
    <div class="message-info">
        <p>
            No se han configurado servicios externos de autenticación.
        </p>
    </div>
}
else
{
    using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }))
    {
    @Html.AntiForgeryToken()
    <fieldset id="socialLoginList">
        <legend></legend>




        @foreach (AuthenticationClientData p in Model)
        {   
            <p>
                <button type="submit"  class="btn btn-large btn-block btn-u"  name="provider" value="@p.AuthenticationClient.ProviderName" title="Inicia sesión usando tu cuenta de @p.DisplayName ">@p.DisplayName</button>
            </p>          
        }

    </fieldset>
    }
}
