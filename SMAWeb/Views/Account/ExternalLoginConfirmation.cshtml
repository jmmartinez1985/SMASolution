@model SMAWeb.Models.RegisterExternalLoginModel
@{
    ViewBag.Title = "Registro en Service Market";
}

<div class="another-page">
    <div class="headline">
        <h3>@ViewBag.Title.</h3>
    </div>


    <h2>Asociar @ViewBag.ProviderDisplayName a su cuenta.</h2>

    @using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

   
        
        <p>
            Se ha autenticado satisfactoriamente con <strong>@ViewBag.ProviderDisplayName</strong>.
            Por favor ingrese su correo electrónico para Service Market y luego haga clic en registrar para finalizar su inicio de sesión
        </p>
        <ol>
            <li class="name">
                @Html.Label("Correo Electrónico")
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
        </ol>
        @Html.HiddenFor(m => m.ExternalLoginData)
        <input type="submit" class="btn-u" value="Registrar" />

    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
